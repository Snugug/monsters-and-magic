---
import Layout from '$layouts/Layout.astro';
import ChapterNav from '$components/ChapterNav.svelte';
import type { MarkdownHeading } from 'astro';

export type props = {
  title: string;
  headings: MarkdownHeading;
};

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="article">
    <div class="article--major-nav">
      <ChapterNav />
    </div>
    <aside class="article--subnav">
      <slot name="sidebar" />
    </aside>

    <article class="article--content">
      <div class="type">
        <h1>{title}</h1>
        <slot name="content" />
      </div>
    </article>
  </div>
</Layout>

<style lang="scss">
  .article {
    display: grid;
    gap: 1rem;
    width: 100%;
    max-width: 70ch;
    margin-inline: auto;
  }
</style>
