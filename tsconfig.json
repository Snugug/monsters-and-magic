{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$components/*": ["src/components/*"],
      "$views/*": ["src/layouts/views/*"],
      "$layouts/*": ["src/layouts/*"],
      "$assets/*": ["src/assets/*"],
      "$js/*": ["src/js/*"],
      "$lib/*": ["src/lib/*"],
      "$$lib/*": ["lib/*"],
      "$types/*": ["types/*"],
      "$sass/*": ["src/sass/*"]
    }
  }
}
